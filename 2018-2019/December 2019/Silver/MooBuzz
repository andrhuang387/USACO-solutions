#include <bits/stdc++.h>
using namespace std;
#define lli long long int
#define f first
#define s second
lli n, m,k;
int main() {
    freopen("moobuzz.in","r",stdin);
    freopen("moobuzz.out","w",stdout);
    cin>>n;
    lli a[9] = {0, 0, 0, 1, 3, 3, 5, 6, 6};  /// 9 cuz index at 1
    lli res = (n-1)%8+1;
    lli ord  = (n - res)/8;
    cout<<n  + ord*7  +a[res]<<endl;
}
